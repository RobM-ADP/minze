{
  "name": "minze-monorepo",
  "private": true,
  "workspaces": [
    "packages/minze",
    "packages/minze-vite-ts"
  ],
  "scripts": {
    "dev:vite-ts": "npm run dev -w minze-vite-ts",
    "lint": "eslint **/*.{js,ts}",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "eslint **/*.{js,ts} --fix",
    "format:prettier": "prettier **/*.{html,css,md,json,js,ts} --write",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.4.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "2.5.1",
    "typescript": "^4.5.3"
  },
  "lint-staged": {
    "**/*.{html,css,md,json,js,ts}": "prettier --write",
    "**/*.{js,ts}": "eslint --fix"
  }
}
