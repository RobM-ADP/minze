{
  "name": "minze-monorepo",
  "private": true,
  "engines": {
    "node": ">=14.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint **/*.{ts,js}",
    "format": "prettier --write .",
    "build": "npm run build:minze",
    "build:minze": "npm run build -w minze"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.4.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "2.5.1",
    "typescript": "^4.5.3"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "packages/**/*.{ts,js}": [
      "eslint --fix"
    ]
  }
}
