{
  "name": "minze-monorepo",
  "private": true,
  "engines": {
    "node": ">=v14.18.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint **/*.{ts,js}",
    "format": "prettier --write .",
    "build": "run-s build-minze",
    "build-minze": "npm run build -w minze"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.19.2",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "packages/**/*.{ts,js}": [
      "eslint --fix"
    ]
  }
}
