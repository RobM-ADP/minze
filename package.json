{
  "name": "minze-monorepo",
  "private": true,
  "engines": {
    "node": ">=v14.0.0"
  },
  "workspaces": [
    "packages/minze",
    "packages/minze-elements",
    "packages/create-minze"
  ],
  "scripts": {
    "prepare": "husky install",
    "dev": "run-p -rs dev-*",
    "dev-minze": "npm run dev -w minze",
    "dev-minze-elements": "(wait-on packages/minze/dist/module.js) && (npm run dev -w @minze/elements)",
    "build": "npm run build --workspaces --if-present",
    "docs": "vitepress dev docs",
    "docs-build": "vitepress build docs",
    "docs-serve": "vitepress serve docs",
    "format": "prettier --write .",
    "lint": "eslint **/*.{ts,js}",
    "clean": "npm run clean --workspaces --if-present"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@microsoft/api-extractor": "^7.19.3",
    "@types/node": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4",
    "vitepress": "^0.20.10",
    "wait-on": "^6.0.0"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "packages/**/*.{ts,js}": [
      "eslint --fix"
    ]
  }
}
