{
  "name": "minze",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Sergej Samsonenko",
  "description": "Framework for insanely fast native web components.",
  "type": "module",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n6ai/minze.git",
    "directory": "packages/minze"
  },
  "bugs": {
    "url": "https://github.com/n6ai/minze/issues"
  },
  "scripts": {
    "dev": "rimraf dist/ && rollup -c -w",
    "build": "run-s clean lint build-bundle build-types roll-types",
    "build-bundle": "rollup -c",
    "build-types": "tsc --emitDeclarationOnly --declaration true --outDir .temp/",
    "roll-types": "api-extractor run && rimraf .temp/",
    "lint": "eslint **/*.ts",
    "clean": "rimraf dist/ .temp/"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.0",
    "rollup": "^2.61.1",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.5.3"
  }
}
